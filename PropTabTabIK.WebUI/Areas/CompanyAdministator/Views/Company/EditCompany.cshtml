@model PropTabTabIK.Entities.Entities.CompanyAdmin

@{
    ViewData["Title"] = "EditCompany";
}

<script>
    /*  ==========================================
        SHOW UPLOADED IMAGE
    * ========================================== */
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imageResultLogo')
                    .attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
    $(function () {
        $('#uploadLogo').on('change', function () {
            readURL(input);
        });
    });
    function readPPURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imageResultPP')
                    .attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
    $(function () {
        $('#uploadPP').on('change', function () {
            readPPURL(input);
        });
    });
    /*  ==========================================
        SHOW UPLOADED IMAGE NAME
    * ========================================== */
    var input = document.getElementById('uploadLogo');
    var infoArea = document.getElementById('upload-labelLogo');

    input.addEventListener('change', showFileName);
    function showFileName(event) {
        var input = event.srcElement;
        var fileName = input.files[0].name;
        infoArea.textContent = 'Dosya Adı: ' + fileName;
    }
</script>

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1>Ayarlar</h1>
                <div class="form-group float-right">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-success">Anasayfaya Dön</a>
                </div>
                <div class="separator mb-5"></div>

                <div class="row">
                    <div class="col-lg-12 mx-auto">
                        <form asp-area="CompanyAdministator" asp-controller="Company" asp-action="EditCompany" method="post" enctype="multipart/form-data">
                            <div class="col-md-4  float-left">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <!-- #region Dnone -->

                                <div class="form-group d-none">
                                    <label asp-for="SiteAdminID" class="control-label"></label>
                                    <input asp-for="SiteAdminID" class="form-control" value="@Model.SiteAdminID"/>
                                    <span asp-validation-for="SiteAdminID" class="text-danger"></span>
                                </div>
                                @*<div class="form-group d-none">
                                    <label asp-for="PurchasePackageDate" class="control-label"></label>
                                    <input asp-for="PurchasePackageDate" value="@Model.PurchasePackageDate" class="form-control" />
                                    <span asp-validation-for="PurchasePackageDate" class="text-danger"></span>
                                </div>*@
                                
                                <div class="form-group d-none">
                                    <label asp-for="PackageID" class="control-label"></label>
                                    <input asp-for="PackageID" value="@Model.PackageID" class="form-control"/>
                                    <span asp-validation-for="PackageID" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="ID" />
                                <div class="form-group d-none">
                                    <label asp-for="Status" class="control-label"></label>
                                    <input asp-for="Status" class="form-control"/>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="form-group d-none">
                                    <label asp-for="Role" class="control-label"></label>
                                    <input asp-for="Role" class="form-control" />
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                                <div class="form-group d-none">
                                    <label asp-for="ErrorLogin" class="control-label"></label>
                                    <input asp-for="ErrorLogin" class="form-control" />
                                    <span asp-validation-for="ErrorLogin" class="text-danger"></span>
                                </div>

                                <!-- #endregion -->
                                <div class="form-group">
                                    <label asp-for="CompanyName" class="control-label"></label>
                                    <input asp-for="CompanyName" class="form-control" />
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                @if (TempData["emailCheck"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <strong>@TempData["emailCheck"].ToString()</strong>
                                    </div>
                                }
                                <div class="form-group d-none">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" value="@Model.Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Surname" class="control-label"></label>
                                    <input asp-for="Surname" class="form-control" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>

                                <!-- Uploaded image area-->

                                @if (TempData["success"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <strong>@TempData["success"].ToString()</strong>
                                    </div>
                                }
                                @if (TempData["IsImage"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <strong>@TempData["IsImage"].ToString()</strong>
                                    </div>
                                }
                                @if (TempData["image"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <strong>@TempData["Image"].ToString()</strong>
                                    </div>
                                }
                                <div class="form-group">
                                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                                    <a asp-action="NewPassword" asp-controller="Company" class="btn btn-danger">Şifre değiştirmek için Tıklayın</a>

                                </div>

                            </div>
                            <div class="row py-4">
                                <div class="col-lg-6 pic">
                                    <div class="col-lg-12">
                                        <!-- Upload image input-->
                                        <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                                            <input asp-for="CompanyLogo" name="logo" id="uploadLogo" type="file" onchange="readURL(this);" class="form-control border-0 upload">
                                            <label id="upload-labelLogo" for="uploadLogo" class="font-weight-light text-muted upload-label">Şirket Logosu seçin.</label>
                                            <div class="input-group-append">
                                                <label for="uploadLogo" class="btn btn-light m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i><small class="text-uppercase font-weight-bold text-muted">Şirket Logosu seçin.</small></label>
                                            </div>
                                        </div>
                                        <!-- Uploaded image area-->
                                        <p class="font-italic text-black-50 text-center">Yükleyeceğiniz Şirket Logosu aşağıdaki kutuda gözükecek.</p>
                                        <div class="image-area mt-4">
                                            @if (Model.CompanyLogo == "" || Model.CompanyLogo == null)
                                            {
                                                <img id="imageResultLogo" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="" class="img-fluid rounded shadow-sm mx-auto d-block" />
                                            }
                                            <img id="imageResultLogo" src="@Model.CompanyLogo" alt="" class="img-fluid rounded shadow-sm mx-auto d-block">
                                            <a type="submit" asp-route-id="@Model.ID" asp-controller="Home" asp-action="PictureRemove" asp-route-area="SiteAdministator">
                                                <span class="badge badge-pill badge-theme deleteImg position-absolute   badge-top-left">
                                                    <i class="simple-icon-close "></i>
                                                </span>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-6 pic">
                                    <div class="col-lg-12">
                                        <!-- Upload image input-->
                                        <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                                            <input asp-for="ProfilPicture" name="imagePP" id="uploadPP" type="file" onchange="readPPURL(this);" class="form-control border-0 upload">
                                            <label id="upload-label" for="uploadPP" class="font-weight-light text-muted">Resim seçiniz.</label>
                                            <div class="input-group-append">
                                                <label for="uploadPP" class="btn btn-light m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i><small class="text-uppercase font-weight-bold text-muted">Resim seçiniz.</small></label>
                                            </div>
                                        </div>
                                        <!-- Uploaded image area-->
                                        <p class="font-italic text-black-50 text-center">Yükleyeceğiniz resim aşağıdaki kutuda gözükecek.</p>

                                        <div class="image-area mt-4">
                                            @if (Model.ProfilPicture == "" || Model.ProfilPicture == null)
                                            {
                                                <img id="imageResultPP" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="" class="img-fluid rounded shadow-sm mx-auto d-block" />
                                            }
                                            <img id="imageResultPP" src="@Model.ProfilPicture" alt="" class="img-fluid rounded shadow-sm mx-auto d-block">
                                            <a type="submit" asp-route-id="@Model.ID" asp-controller="Home" asp-action="PictureRemove" asp-route-area="SiteAdministator">
                                                <span class="badge badge-pill badge-theme deleteImg position-absolute   badge-top-left">
                                                    <i class="simple-icon-close "></i>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </form>
                    </div>

                </div>


            </div>

        </div>
    </div>

</main>
